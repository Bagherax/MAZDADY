<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>لوحة تحكم MAZDADY</title>
    <style>
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background: #0f0f1b; color: #fff; padding: 20px; }
        .container { max-width: 800px; margin: 0 auto; }
        h1 { color: #4CAF50; text-align: center; }
        .card { background: #1a1a2e; padding: 20px; margin: 15px 0; border-radius: 10px; }
        label { display: block; margin: 10px 0 5px; }
        input, select { width: 100%; padding: 10px; margin-bottom: 10px; background: #252540; border: 1px solid #4CAF50; color: white; border-radius: 5px; }
        button { background: #4CAF50; color: white; border: none; padding: 12px 20px; width: 100%; font-size: 16px; border-radius: 5px; cursor: pointer; }
        button:hover { background: #45a049; }
        .status { text-align: center; margin-top: 20px; padding: 10px; border-radius: 5px; }
        .success { background: #2e7d32; }
        .error { background: #c62828; }
    </style>
</head>
<body>
    <div class="container">
        <h1>لوحة تحكم MAZDADY</h1>
        
        <div class="card">
            <h2>إعدادات السحب</h2>
            <label>الحد الأدنى للمستوى:</label>
            <input type="number" id="minLevel" value="5">
            
            <label>الجدولة:</label>
            <select id="schedule">
                <option value="weekly">أسبوعي</option>
                <option value="monthly">شهري</option>
            </select>
        </div>

        <div class="card">
            <h2>ضرائب السحب</h2>
            <label>محفظة رقمية (%):</label>
            <input type="number" id="taxWallet" value="5" step="0.1">
            
            <label>تحويل بنكي (%):</label>
            <input type="number" id="taxBank" value="8" step="0.1">
        </div>

        <div class="card">
            <h2>تصميم الواجهة الأساسية</h2>
            <label>لون الخلفية:</label>
            <input type="color" id="mainBg" value="#0f0f1b">
            <label>لون الشريط العلوي:</label>
            <input type="color" id="topBarColor" value="#1a1a2e">
            <label>لون زر الشراء:</label>
            <input type="color" id="buyButtonColor" value="#4CAF50">
            <label>لون زر البيع:</label>
            <input type="color" id="sellButtonColor" value="#F44336">
        </div>

        <div class="card">
            <h2>تصميم الواجهة</h2>
            <label>لون خلفية الـ Popup:</label>
            <input type="color" id="popupBg" value="#1a1a2e">
            <label>لون عنوان الـ Popup:</label>
            <input type="color" id="popupTitleColor" value="#4CAF50">
            <label>حجم عنوان الـ Popup (pt):</label>
            <input type="number" id="popupTitleSize" value="20" min="10" max="30">
            <label>عرض الـ Popup (% من الشاشة):</label>
            <input type="number" id="popupWidth" value="95" min="50" max="100">
        </div>

        <button onclick="saveConfig()">حفظ الإعدادات</button>
        <div id="status" class="status" style="display:none;"></div>
    </div>

    <script>
        async function saveConfig() {
            const config = {
                min_withdrawal_level: parseInt(document.getElementById('minLevel').value),
                withdrawal_schedule: document.getElementById('schedule').value,
                tax_rates: {
                    wallet_crypto: parseFloat(document.getElementById('taxWallet').value),
                    bank_transfer: parseFloat(document.getElementById('taxBank').value)
                },
                ui: {
                    main_background_color: document.getElementById('mainBg').value,
                    top_bar_color: document.getElementById('topBarColor').value,
                    buy_button_color: document.getElementById('buyButtonColor').value,
                    sell_button_color: document.getElementById('sellButtonColor').value,
                    popup_bg: document.getElementById('popupBg').value,
                    popup_title_color: document.getElementById('popupTitleColor').value,
                    popup_title_size: parseFloat(document.getElementById('popupTitleSize').value),
                    popup_width_ratio: parseFloat(document.getElementById('popupWidth').value) / 100
                },
                last_updated: new Date().toISOString()
            };

            document.getElementById('status').className = 'status success';
            document.getElementById('status').innerText = '✅ تم الحفظ! (في الإنتاج: سيتم تحديث config.json تلقائيًا)';
            document.getElementById('status').style.display = 'block';
        }
        
        <!-- أضف هذا داخل قسم "خلفيات مخصصة" -->
<div class="card">
    <h3>رفع صورة مخصصة</h3>
    <label>اختر العنصر:</label>
    <select id="elementSelect">
        <option value="main_background">الواجهة الرئيسية</option>
        <option value="buy_button_background">زر الشراء</option>
        <option value="sell_button_background">زر البيع</option>
        <option value="popup_background">خلفية الـ Popup</option>
    </select>
    
    <label>اختر الصورة من معرضك:</label>
    <input type="file" id="imageUpload" accept="image/*">
    
    <button onclick="handleUpload()">رفع الصورة</button>
</div>

<script>
function handleUpload() {
    const fileInput = document.getElementById('imageUpload');
    const element = document.getElementById('elementSelect').value;
    
    if (fileInput.files.length === 0) {
        alert('يرجى اختيار صورة!');
        return;
    }
    
    const file = fileInput.files[0];
    uploadImage(file, element); // من upload.js
}
<div class="card">
    <h2>الزر العائم للإعلانات</h2>
    
    <label>مفعل:</label>
    <input type="checkbox" id="adEnabled" checked>
    
    <label>مدة العرض (ثواني):</label>
    <input type="number" id="adDisplay" value="10" min="5" max="60">
    
    <label>مدة الإخفاء (ثواني):</label>
    <input type="number" id="adHide" value="30" min="10" max="300">
    
    <label>رابط صورة الإعلان:</label>
    <input type="url" id="adImageUrl" placeholder="https://example.com/ad.png">
    
    <button onclick="saveFloatingAd()">حفظ إعدادات الإعلان</button>
    <div class="card">
    <h2>إدارة العناصر</h2>
    
    <div class="element-control" data-element="buy_button">
        <h3>زر الشراء</h3>
        <label>مرئي: <input type="checkbox" class="visible" checked></label>
        <label>الموضع:
            <select class="position">
                <option value="bottom_left">أسفل يسار</option>
                <option value="bottom_right" selected>أسفل يمين</option>
                <option value="center">الوسط</option>
            </select>
        </label>
        <label>يتطلب اشتراك: <input type="checkbox" class="subscription"></label>
        <label>الحد الأدنى للمستوى: <input type="number" class="min-level" value="1"></label>
    </div>

    <div class="element-control" data-element="payment_tools">
        <h3>أدوات الدفع</h3>
        <label>مرئي: <input type="checkbox" class="visible"></label>
        <label>الموضع:
            <select class="position">
                <option value="sidebar" selected>شريط جانبي</option>
                <option value="bottom_center">أسفل الوسط</option>
            </select>
        </label>
        <label>يتطلب اشتراك: <input type="checkbox" class="subscription" checked></label>
        <label>الحد الأدنى للمستوى: <input type="number" class="min-level" value="3"></label>
    </div>

    <!-- كرر لنفس العناصر الأخرى -->

    <button onclick="saveElementSettings()">حفظ إعدادات العناصر</button>
</div>

<script>
function saveElementSettings() {
    const elements = {};
    document.querySelectorAll('.element-control').forEach(div => {
        const elementId = div.dataset.element;
        elements[elementId] = {
            visible: div.querySelector('.visible').checked,
            position: div.querySelector('.position').value,
            subscription_required: div.querySelector('.subscription').checked,
            min_level: parseInt(div.querySelector('.min-level').value)
        };
    });

    // تحديث config.json
    updateConfigElements(elements);
    alert('✅ تم حفظ إعدادات العناصر!');
}
</script>
</div>
</script>
    </script>
</body>
</html>