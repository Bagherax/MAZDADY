/**
 * تحديث إعدادات KYC
 */
app.put('/api/admin/kyc-config', authenticateAdmin, (req, res) => {
    try {
        const newKYCConfig = req.body;
        const kycPath = path.join(__dirname, '../kyc-handler.yml');
        
        // التحقق من صحة إعدادات KYC
        if (!isValidKYCConfig(newKYCConfig)) {
            return res.status(400).json({
                success: false,
                message: 'Invalid KYC configuration format'
            });
        }
        
        // حفظ إعدادات KYC الجديدة
        const yamlContent = convertToYAML(newKYCConfig);
        fs.writeFileSync(kycPath, yamlContent);
        
        console.log('ADMIN API: KYC configuration updated successfully');
        res.json({
            success: true,
            message: 'KYC configuration updated successfully'
        });
        
    } catch (error) {
        console.error('KYC CONFIG UPDATE ERROR:', error);
        res.status(500).json({
            success: false,
            message: 'KYC configuration update failed: ' + error.message
        });
    }
});

