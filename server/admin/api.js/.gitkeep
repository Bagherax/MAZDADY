// --- Utility Functions ---
function isValidConfig(config) {
    return config && typeof config === 'object';
}

function isValidDimensions(dimensions) {
    return dimensions && typeof dimensions === 'object';
}

function isValidKYCConfig(kycConfig) {
    return kycConfig && typeof kycConfig === 'object';
}

function convertToYAML(config) {
    // في الإنتاج: استخدام مكتبة YAML
    return JSON.stringify(config, null, 2); // محاكاة YAML
}

