        console.log('ADMIN API: Splash video uploaded successfully');
        res.json({
            success: true,
            message: 'Splash video uploaded successfully',
            video_url: config.ui.splash_video_url
        });
        
    } catch (error) {
        console.error('VIDEO UPLOAD ERROR:', error);
        res.status(500).json({
