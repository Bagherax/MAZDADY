<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- السمة الأساسية -->
    <style name="Theme.MAZDADY" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- ألوان أساسية -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- سمات مخصصة لـ MAZDADY -->
        <item name="mainBackgroundColor">@color/main_background</item>
        <item name="topBarBackgroundColor">@color/top_bar</item>
        <item name="bottomControlsBackgroundColor">@color/bottom_controls</item>
        <item name="tradingLineBackgroundColor">@color/trading_line</item>
        <item name="popupBackgroundColor">@color/popup_background</item>
        <item name="popupTitleBackgroundColor">@color/popup_title_bg</item>
        
        <!-- ألوان النصوص -->
        <item name="textColorPrimary">@color/text_primary</item>
        <item name="textColorSecondary">@color/text_secondary</item>
        <item name="buyButtonColor">@color/buy_button</item>
        <item name="sellButtonColor">@color/sell_button</item>
        <item name="buyButtonTextColor">@color/buy_button_text</item>
        <item name="sellButtonTextColor">@color/sell_button_text</item>
        
        <!-- أحجام الخطوط -->
        <item name="popupTitleSize">20sp</item>
        <item name="popupContentSize">16sp</item>
        <item name="popupButtonSize">18sp</item>
        
        <!-- إعدادات النظام -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- سمة شاشة البداية -->
    <style name="Theme.MAZDADYSplash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

</resources>