<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainBackgroundColor">

    <!-- الشريط العلوي -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="?attr/topBarBackgroundColor"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/balance_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/balance_placeholder"
            android:textColor="?attr/textColorPrimary"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium" />

        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_menu"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:layoutDirection="locale"
            android:contentDescription="@string/menu" />

    </LinearLayout>

    <!-- خط التداول -->
    <com.mazdady.ui.TradingLineView
        android:id="@+id/trading_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/tradingLineBackgroundColor"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- الأزرار السفلية -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/bottomControlsBackgroundColor"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/buy_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/buy"
                android:textColor="?attr/buyButtonTextColor"
                android:backgroundTint="?attr/buyButtonColor"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:stateListAnimator="@animator/button_press" />

            <Button
                android:id="@+id/sell_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/sell"
                android:textColor="?attr/sellButtonTextColor"
                android:backgroundTint="?attr/sellButtonColor"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:stateListAnimator="@animator/button_press" />

        </LinearLayout>

        <TextView
            android:id="@+id/investment_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/investment_info"
            android:gravity="center"
            android:textColor="?attr/textColorSecondary"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>