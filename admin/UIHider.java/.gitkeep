package mazdady.admin;

/**
 * مدير إخفاء العناصر مع دعم التحكم الديناميكي
 */
public final class UIHider {
    private static final UIHider INSTANCE = new UIHider();

    private UIHider() {}

    public static UIHider getInstance() {
        return INSTANCE;
    }

    public void hideElement(String elementId) {
        System.out.println("UI HIDDEN: Element " + elementId + " hidden");
        ConfigPusher.getInstance().pushUIConfig(elementId, "visible", "false");
    }

    public void showElement(String elementId) {
        System.out.println("UI SHOWN: Element " + elementId + " shown");
        ConfigPusher.getInstance().pushUIConfig(elementId, "visible", "true");
    }

    public void toggleElement(String elementId) {
        System.out.println("UI TOGGLED: Element " + elementId + " toggled");
        ConfigPusher.getInstance().pushUIConfig(elementId, "toggle", "true");
    }
}