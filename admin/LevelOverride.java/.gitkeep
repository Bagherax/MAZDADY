package mazdady.admin;

import mazdady.user.UserManager;

/**
 * مدير تجاوز المستوى مع دعم السجلات والتدقيق
 */
public final class LevelOverride {
    private static final LevelOverride INSTANCE = new LevelOverride();

    private LevelOverride() {}

    public static LevelOverride getInstance() {
        return INSTANCE;
    }

    public void overrideUserLevel(String userId, int level) {
        if (level < 1) {
            throw new IllegalArgumentException("Level must be at least 1");
        }
        UserManager.getInstance(null).getCurrentUser().setLevel(level);
        System.out.println("LEVEL OVERRIDE: User " + userId + " level set to " + level);
    }

    public void resetUserLevel(String userId) {
        UserManager.getInstance(null).getCurrentUser().setLevel(1);
        System.out.println("LEVEL RESET: User " + userId + " level reset to default");
    }
}