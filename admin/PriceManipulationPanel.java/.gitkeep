package mazdady.admin;

import mazdady.trading.PriceEngine;

/**
 * لوحة التلاعب بالسعر مع دعم الاختبار الآمن
 * مخصصة للاستخدام في بيئة التطوير فقط
 */
public final class PriceManipulationPanel {
    private final PriceEngine priceEngine;

    private static final PriceManipulationPanel INSTANCE = new PriceManipulationPanel();

    private PriceManipulationPanel() {
        this.priceEngine = new PriceEngine();
    }

    public static PriceManipulationPanel getInstance() {
        return INSTANCE;
    }

    public void setFixedPrice(double price) {
        if (price <= 0) {
            throw new IllegalArgumentException("Price must be positive");
        }
        // في الإنتاج: تعيين سعر ثابت (للاختبار فقط)
        System.out.println("PRICE FIXED: Set to " + price + " MAZDADY");
    }

    public void applyPriceMultiplier(double multiplier) {
        if (multiplier <= 0) {
            throw new IllegalArgumentException("Multiplier must be positive");
        }
        System.out.println("PRICE MULTIPLIER: Applied " + multiplier + "x multiplier");
    }

    public void resetToMarketPrice() {
        System.out.println("PRICE RESET: Returned to natural market price");
    }
}