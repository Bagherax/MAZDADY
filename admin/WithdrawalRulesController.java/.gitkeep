package mazdady.admin;

public class WithdrawalRulesController {
    public void setMinWithdrawalLevel(int level) {
        System.out.println("تم تعيين الحد الأدنى للمستوى للسحب إلى: " + level);
    }

    public void setWeeklyLimitForLevel(int level, double limit) {
        System.out.println("تم تعيين الحد الأسبوعي للمستوى " + level + " إلى: " + limit);
    }

    public void setWithdrawalSchedule(String schedule) {
        System.out.println("تم تعيين جدولة السحب إلى: " + schedule);
    }

    public void enableKYCForWithdrawal(boolean enabled) {
        System.out.println("تم " + (enabled ? "تفعيل" : "إيقاف") + " KYC للسحب");
    }
}