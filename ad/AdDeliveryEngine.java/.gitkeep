package mazdady.ad;

import java.util.concurrent.Executors;
import java.util.concurrent.ScheduledExecutorService;
import java.util.concurrent.TimeUnit;
import java.util.function.Consumer;

/**
 * محرك توصيل الإعلانات مع دعم الجدولة الديناميكية
 * يستخدم ScheduledExecutorService للجدولة الدقيقة
 */
public final class AdDeliveryEngine {
    private final ScheduledExecutorService scheduler = Executors.newScheduledThreadPool(2);
    private final AdAnalytics analytics = AdAnalytics.getInstance();

    public void deliverAd(AdCampaign campaign, Consumer<AdCampaign> onDelivered) {
        // تسجيل العرض فورًا
        analytics.trackImpression(campaign.getId());
        
        // جدولة المراقبة
        scheduler.scheduleAtFixedRate(
            () -> monitorCampaign(campaign),
            0,
            30,
            TimeUnit.SECONDS
        );
        
        onDelivered.accept(campaign);
    }

    private void monitorCampaign(AdCampaign campaign) {
        // في الإنتاج: جلب البيانات الفعلية من منصات التواصل
        int currentProgress = (int) (Math.random() * campaign.getTargetCount() * 1.2);
        
        if (campaign.isCompleted(currentProgress)) {
            // إكمال الحملة
            AdCampaign completed = campaign.complete();
            analytics.trackConversion(campaign.getId(), "completed");
            // إيقاف الجدولة (في الإنتاج: استخدام Future)
        }
    }

    public void shutdown() {
        scheduler.shutdown();
    }
}