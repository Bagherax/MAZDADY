package mazdady.ad;

/**
 * ترويج اجتماعي مع دعم التكامل الديناميكي
 * يوفر واجهة موحدة لمنصات التواصل المختلفة
 */
public final class SocialPromotion {
    public static boolean isValidPlatform(AdCampaign.Platform platform) {
        return platform != null;
    }

    public static boolean isValidUrl(String url, AdCampaign.Platform platform) {
        return platform.isValidUrl(url);
    }

    public static String getGoalLabel(AdCampaign.Goal goal) {
        return switch (goal) {
            case VIEWS -> "مشاهدات";
            case LIKES -> "إعجابات";
            case COMMENTS -> "تعليقات";
            case SUBSCRIBERS -> "متابعين";
        };
    }
}