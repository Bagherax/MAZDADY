package mazdady.ad;

import java.util.ArrayList;
import java.util.List;

public class AdMarketplace {
    private List<AdCampaign> availableCampaigns = new ArrayList<>();

    public void publishCampaign(AdCampaign campaign) {
        availableCampaigns.add(campaign);
        System.out.println("تم نشر الحملة في السوق: " + campaign.getCampaignId());
    }

    public List<AdCampaign> getAvailableCampaigns() {
        return new ArrayList<>(availableCampaigns);
    }

    public AdCampaign findCampaignById(String campaignId) {
        for (AdCampaign campaign : availableCampaigns) {
            if (campaign.getCampaignId().equals(campaignId)) {
                return campaign;
            }
        }
        return null;
    }

    public void removeCampaign(String campaignId) {
        availableCampaigns.removeIf(camp -> camp.getCampaignId().equals(campaignId));
    }
}